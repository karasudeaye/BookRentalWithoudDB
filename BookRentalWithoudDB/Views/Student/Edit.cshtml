@model Student

<h2>Edit Student</h2>

<form method="post" asp-action="Edit" asp-controller="Student">
    <table>
        <tr>
            <td width="200">ID</td>
            <td><input asp-for="ID" readonly /></td>
        </tr>
        <tr>
            <td width="200">Name</td>
            <td><input asp-for="Name" /></td>
        </tr>
        <tr>
            <td width="200">Surname</td>
            <td><input asp-for="Surname" /></td>
        </tr>
        <tr>
            <td width="200">Birth Date</td>
            <td><input asp-for="BirthDate" type="date" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Save" /></td>
            <td></td>
        </tr>
    </table>
</form>
